{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CalendarEventDetail",
  "type": "object",
  "required": ["calendar_id", "title", "is_recurring"],
  "properties": {
    "event_id": {
      "type": "string"
    },
    "calendar_id": {
      "type": "string"
    },
    "summary": {
      "type": "string"
    },
    "start": {
      "type": "string",
      "format": "date-time"
    },
    "attendees": {
      "type": ["array", "null"],
      "items": {
        "type": "object",
        "required": ["email"],
        "properties": {
          "email": {
            "type": "string",
            "format": "email"
          },
          "duration_seconds": {
            "type": "integer"
          },
          "join_time": {
            "type": "string",
            "format": "date-time"
          },
          "leave_time": {
            "type": "string",
            "format": "date-time"
          }
        },
        "additionalProperties": false
      }
    },
    "is_recurring": {
      "type": "boolean"
    }
  },
  "additionalProperties": false
}
